<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="se.ess.ics.csstudio.product.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.csstudio.startup.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="se.ess.ics.csstudio.product.application"
            name="ESS CS-Studio">
         <property
               name="appName"
               value="ESS CS-Studio">
         </property>
         <property
               name="introTitle"
               value="Welcome to Control System Studio&lt;/h1&gt;&lt;p&gt;Control System Studio is an Eclipse-based collections of tools to monitor and operate large scale control systems, such as the ones in the accelerator community.&lt;/p&gt;&lt;p&gt;New users: click on First Steps&lt;/p&gt;&lt;h1&gt;">
         </property>
          <property
               name="introBrandingImage"
               value="product:icons/welcome.png">
         </property>
         <property
               name="introBrandingImageText"
               value="Control System Studio">
         </property>
         <property
               name="windowImages"
               value="icons/css16.png,icons/css32.png,icons/css48.png,icons/css64.png,icons/css128.png,icons/css256.png">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFFFF">
         </property>
         <property
               name="startupMessageRect"
               value="7,200,466,20">
         </property>
         <property
               name="startupProgressRect"
               value="5,222,470,15">
         </property>
         <property
               name="introDescription-firststeps"
               value="Getting started with CS-Studio">
         </property>
         <property
               name="introDescription-tutorials"
               value="Learn how to use CS-Studio">
         </property>
         <property
               name="introDescription-whatsnew"
               value="New features in CS-Studio">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/org.csstudio.product/icons/cs-studio-about.png">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <introProductBinding
            introId="org.eclipse.ui.intro.universal"
            productId="se.ess.ics.csstudio.product.product">
      </introProductBinding>
   </extension>
</plugin>
