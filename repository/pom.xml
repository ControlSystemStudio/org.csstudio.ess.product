<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.csstudio</groupId>
    <artifactId>se.ess.ics.csstudio</artifactId>
    <version>4.5.0.1</version>
  </parent>
  <artifactId>se.ess.ics.csstudio.repository</artifactId>
  <packaging>eclipse-repository</packaging>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-p2-repository-plugin</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <includeAllDependencies>true</includeAllDependencies>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-p2-director-plugin</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <formats>
            <linux>tar.gz</linux>
            <macosx>zip</macosx>
          </formats>
          <products>
            <product>
              <id>${product.name}</id>
                <rootFolders>
          	      <linux>cs-studio</linux>
                  <macosx>ESS CS-Studio.app</macosx>
                </rootFolders>
              <archiveFileName>${product.name}-${product.version}</archiveFileName>
            </product>
          </products>
        </configuration>
        <executions>
          <execution>
            <id>materialize-products</id>
            <goals>
              <goal>materialize-products</goal>
            </goals>
          </execution>
          <execution>
            <id>archive-products</id>
            <phase>verify</phase>
            <goals>
              <goal>archive-products</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
		<plugin>
			<groupId>name.abuchen</groupId>
			<artifactId>fix-info-plist-maven-plugin</artifactId>
			<version>1.0</version>
			<executions>
				<execution>
					<id>fix-info-plist</id>
					<phase>package</phase>
					<goals>
						<goal>fix-info-plist</goal>
					</goals>
				</execution>
			</executions>
			<configuration>
				<productId>${product.name}</productId>
				<appName>ESS CS-Studio.app</appName>
				<properties>
					<property>
						<name>CFBundleName</name>
						<value>ESS CS-Studio</value>
					</property>
					<property>
						<name>CFBundleDisplayName</name>
						<value>ESS CS-Studio</value>
					</property>
					<property>
						<name>CFBundleExecutable</name>
						<value>ESS CS-Studio</value>
					</property>
					<property>
						<name>CFBundleShortVersionString</name>
						<value>${product.version}</value>
					</property>
					<property>
						<name>CFBundleVersion</name>
						<value>${product.version}</value>
					</property>
					<property>
						<name>CFBundleIdentifier</name>
						<value>se.ess.ics.csstudio</value>
					</property>
					<property>
						<name>NSHumanReadableCopyright</name>
						<value>Copyright 2016 European Spallation Source ERIC. All rights reserved.</value>
					</property>
					<property>
						<name>CFBundleGetInfoString</name>
						<value />
					</property>
					<property>
						<name>Eclipse</name>
						<value />
					</property>
				</properties>
			</configuration>
		</plugin>
    </plugins>
  </build>
</project>
